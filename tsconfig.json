{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ES2020",
    "sourceMap": true,
    "jsx": "preserve",
    "baseUrl": "./",
    "lib": [
      "ES2021",
      "dom"
    ],
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "plugins": [
      {
        "name": "@vuedx/typescript-plugin-vue"
      }
    ],
    "moduleResolution": "node",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "types": [
      "cypress",
      "node"
    ],
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    "workshop-scripts/*.ts"
  ]
}